let &guifont = 'DejaVu Sans Mono 11.5'
" Use console dialogs
set guioptions+=c
" Disable menubar
set guioptions-=m
" Disable toolbar
set guioptions-=T
" Disable tearoff menus
set guioptions-=t
" Disable scrollbars
set guioptions-=r
set guioptions-=R
set guioptions-=l
set guioptions-=L
" Disable cursor blinking
set guicursor+=a:blinkon0
